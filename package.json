{
  "name": "zorgbort",
  "version": "15.0.0",
  "description": "Zorgbort does Iliosy things well",
  "main": "app.js",
  "private": true,
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
